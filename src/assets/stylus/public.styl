html, body, #app
    @extend .main-class;
*, *:focus
    outline none;
input, textarea
    font-size $fontSizeS;
.margin-item
    margin 20px 30px;
.margin-left
    margin-left 10px;
.margin-right
    margin-right 10px;
img
    max-width 100%;
.img-button
    height 72px;
    cursor pointer;
.common-icon
    height $fontSizeL;
    cursor pointer;
.common-icon-large
    height $fontIconLarge;
    cursor pointer;
.bottom-margin
    @extend .flex-no-grow;
    width 100%;
    height 100px;
.yellow
    color #FF9539;
.white
    color white;
.fixed-bottom
    @extend .flex-space-between;
    padding 10px 50px;
    height 80px;
    position fixed;
    left 0;
    right 0;
    bottom 0;
    background-color white;
.fl-c-c
    display flex;
    align-items center;
    justify-content center;
.fl-c-a
    display flex;
    align-items center;
    justify-content space-around;
.fl-c-b
    display flex;
    align-items center;
    justify-content space-between;
.fl-c-s
    display flex;
    align-items center;
    justify-content flex-start;
.fl-c-e
    display flex;
    align-items center;
    justify-content flex-end;
.full-screen
    position fixed;
    top 0;
    left 0;
    right 0;
    bottom 0;
.full-screen-s
    position fixed;
    top 0;
    left 0;
    right 0;
    bottom 0;
    overflow-y auto;
    overflow-x hidden;
.btn-wrapper
    position fixed;
    bottom 0;
    left 0;
    right 0;
    text-align center;
    background #fff;
    padding 30px 0;
    .van-button
        width 90%;
        background rgb(8, 159, 239);
    .back
        color #089fef;
.van-dialog__cancel
    .van-button__text
        color rgb(110, 137, 255);
.van-dialog__confirm
    color rgb(110, 137, 255);
.van-dialog__message
    font-size 34px;
.van-dialog__header
    font-size 38px;
    font-weight bold;